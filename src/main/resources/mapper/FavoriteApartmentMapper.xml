<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jipjung.project.repository.FavoriteApartmentMapper">

    <!-- Result Map -->
    <resultMap id="FavoriteApartmentResultMap" type="com.jipjung.project.domain.FavoriteApartment">
        <id property="id" column="favorite_id"/>
        <result property="userId" column="user_id"/>
        <result property="apartmentTransactionId" column="apartment_transaction_id"/>
        <result property="createdAt" column="favorite_created_at"/>
        <association property="apartmentTransaction" javaType="com.jipjung.project.domain.ApartmentTransaction">
            <id property="id" column="apt_id"/>
            <result property="apartmentName" column="apartment_name"/>
            <result property="legalDong" column="legal_dong"/>
            <result property="roadAddress" column="road_address"/>
            <result property="buildYear" column="build_year"/>
            <result property="dealAmount" column="deal_amount"/>
            <result property="dealDate" column="deal_date"/>
            <result property="exclusiveArea" column="exclusive_area"/>
            <result property="floor" column="floor"/>
            <result property="createdAt" column="apt_created_at"/>
        </association>
    </resultMap>

    <!-- 관심 아파트 등록 -->
    <insert id="insert" parameterType="com.jipjung.project.domain.FavoriteApartment"
            useGeneratedKeys="true" keyProperty="id">
        INSERT INTO favorite_apartment (user_id, apartment_transaction_id)
        VALUES (#{userId}, #{apartmentTransactionId})
    </insert>

    <!-- 사용자별 관심 아파트 목록 조회 (아파트 정보 포함) -->
    <select id="findByUserId" resultMap="FavoriteApartmentResultMap">
        SELECT f.id as favorite_id,
               f.user_id,
               f.apartment_transaction_id,
               f.created_at as favorite_created_at,
               a.id as apt_id,
               a.apartment_name,
               a.legal_dong,
               a.road_address,
               a.build_year,
               a.deal_amount,
               a.deal_date,
               a.exclusive_area,
               a.floor,
               a.created_at as apt_created_at
        FROM favorite_apartment f
        INNER JOIN apartment_transaction a ON f.apartment_transaction_id = a.id
        WHERE f.user_id = #{userId}
        ORDER BY f.created_at DESC
    </select>

    <!-- 관심 아파트 상세 조회 -->
    <select id="findById" resultMap="FavoriteApartmentResultMap">
        SELECT f.id as favorite_id,
               f.user_id,
               f.apartment_transaction_id,
               f.created_at as favorite_created_at,
               a.id as apt_id,
               a.apartment_name,
               a.legal_dong,
               a.road_address,
               a.build_year,
               a.deal_amount,
               a.deal_date,
               a.exclusive_area,
               a.floor,
               a.created_at as apt_created_at
        FROM favorite_apartment f
        INNER JOIN apartment_transaction a ON f.apartment_transaction_id = a.id
        WHERE f.id = #{id}
    </select>

    <!-- 관심 아파트 삭제 -->
    <delete id="deleteById">
        DELETE FROM favorite_apartment
        WHERE id = #{id}
    </delete>

    <!-- 중복 체크 -->
    <select id="existsByUserIdAndApartmentId" resultType="boolean">
        SELECT COUNT(*) > 0
        FROM favorite_apartment
        WHERE user_id = #{userId} AND apartment_transaction_id = #{apartmentTransactionId}
    </select>

</mapper>
