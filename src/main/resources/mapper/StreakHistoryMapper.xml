<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jipjung.project.repository.StreakHistoryMapper">

    <!-- Result Map -->
    <resultMap id="StreakHistoryResultMap" type="com.jipjung.project.domain.StreakHistory">
        <id property="streakId" column="streak_id"/>
        <result property="userId" column="user_id"/>
        <result property="streakDate" column="streak_date"/>
        <result property="expEarned" column="exp_earned"/>
        <result property="createdAt" column="created_at"/>
    </resultMap>

    <!-- 주간 스트릭 기록 조회 -->
    <select id="findByUserIdAndWeek" resultMap="StreakHistoryResultMap">
        SELECT *
        FROM streak_history
        WHERE user_id = #{userId}
          AND streak_date BETWEEN #{weekStart} AND #{weekEnd}
        ORDER BY streak_date ASC
    </select>

    <!-- 특정 날짜 스트릭 존재 여부 -->
    <select id="existsByUserIdAndDate" resultType="boolean">
        SELECT COUNT(*) > 0
        FROM streak_history
        WHERE user_id = #{userId}
          AND streak_date = #{date}
    </select>

    <!-- 스트릭 기록 삽입 -->
    <insert id="insert" useGeneratedKeys="true" keyProperty="streakId">
        INSERT INTO streak_history (user_id, streak_date, exp_earned)
        VALUES (#{userId}, #{streakDate}, #{expEarned})
    </insert>

</mapper>

